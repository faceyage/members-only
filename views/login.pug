extends layout

block content
  form.auth-form(action="", method="post")
    h1.title= title
    .form-group
      label(for="username") Username 
      input#username(type="text" required name="username")
    .form-group
      label(for="password") Password 
      input#password(type="password" required name="password")
    input.btn(type="submit", value="Login")
  if errors 
    ul
      each err in errors
        li=err.msg